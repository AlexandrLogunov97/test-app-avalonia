<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:dialogs="using:TestApp.Presentation.ViewModels.Dialogs"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="dialogs:DialogViewModel"
			 IsVisible="{Binding IsOpen}"
			 x:Class="TestApp.Presentation.Views.Dialogs.DialogView">

	<Grid>
		<Border Background="Black" Opacity="0.6"/>
		<ContentControl Content="{Binding View}"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"/>
	</Grid>

</UserControl>
