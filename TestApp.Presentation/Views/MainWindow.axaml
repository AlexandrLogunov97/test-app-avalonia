<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="using:TestApp.Presentation.ViewModels"
		xmlns:v="using:TestApp.Presentation.Views"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dialogs="using:TestApp.Presentation.Views.Dialogs"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="TestApp.Presentation.Views.MainWindow"
		x:DataType="vm:MainWindowViewModel"
		Icon="/Assets/avalonia-logo.ico"
		Title="Test App">

	<Grid Background="#1A1A1A">

		<Grid ColumnDefinitions="1.5*,auto,*">
			<Border Grid.Column="0"
					Background="#2D2D2D"
					CornerRadius="5"
					Margin="10,10,0,10"
					Padding="10">
				<Grid RowDefinitions="Auto,*">

					<TextBlock Text="Signals List"
							   FontSize="18"
							   Foreground="White"
							   FontWeight="SemiBold"
							   Margin="0,0,0,10"/>

					<DataGrid Grid.Row="1"
							  IsReadOnly="True"
							  ItemsSource="{Binding Signals}"
							  SelectedItem="{Binding SelectedSignal}"
							  Foreground="White"
							  AutoGenerateColumns="False"
							  CanUserReorderColumns="False"
							  CanUserResizeColumns="True"
							  CanUserSortColumns="True"
							  SelectionMode="Single"
							  BorderThickness="0">
						<DataGrid.Columns>
							<DataGridTextColumn Header="Name"
												Binding="{Binding Name}"
												Foreground="White"
												Width="*"/>
						</DataGrid.Columns>
					</DataGrid>
				</Grid>
			</Border>

			<GridSplitter Grid.Column="1" Width="10" Background="#1A1A1A" ResizeBehavior="PreviousAndNext"/>

			<Border Grid.Column="2"
					Background="#2D2D2D"
					CornerRadius="5"
					Margin="0,10,10,10"
					Padding="10">
				<TabControl Grid.Column="2">
					<TabItem Header="Editor" FontSize="16">
						<v:EditorView Margin="0,20,0,0" DataContext="{Binding EditorViewModel}"/>
					</TabItem>
					<TabItem Header="Chart" FontSize="16">
						<v:ChartView Margin="0,20,0,0" DataContext="{Binding ChartViewModel}"/>
					</TabItem>
				</TabControl>
			</Border>
		</Grid>

		<dialogs:DialogView DataContext="{Binding DialogContainerViewModel}"/>
	</Grid>

</Window>
